<xbl:xbl xmlns:xf="http://www.w3.org/2002/xforms"
         xmlns:xbl="http://www.w3.org/ns/xbl">

    <xbl:binding id="fb-secret" element="xf|secret">
        <metadata xmlns="http://orbeon.org/oxf/xml/form-builder">
            <display-name lang="en">Password Field</display-name>
            <display-name lang="es">Campo de Contraseña</display-name>
            <display-name lang="fi">Salasanakenttä</display-name>
            <display-name lang="fr">Mot de passe</display-name>
            <display-name lang="ru">Пароль</display-name>
            <display-name lang="de">Passwortfeld</display-name>
            <display-name lang="it">Campo password</display-name>
            <display-name lang="nl">Wachtwoordveld</display-name>
            <display-name lang="sv">Passord</display-name>
            <display-name lang="pt">Campo de Senha</display-name>
            <icon lang="en">
                <icon-class>fa fa-fw fa-key</icon-class>
            </icon>
            <templates>
                <view>
                    <xf:secret id="" ref="" xmlns="">
                        <xf:label ref=""/>
                        <xf:hint ref=""/>
                        <xf:help ref=""/>
                        <xf:alert ref=""/>
                    </xf:secret>
                </view>
            </templates>
        </metadata>
    </xbl:binding>

</xbl:xbl>
